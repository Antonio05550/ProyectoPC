<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicio">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:layout_margin="30dp"
            android:gravity="center"
            android:textSize="40dp"/>
        <TextView
            android:id="@+id/t_tecnicas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esta aplicación esta diseñada para ayudarte a disminuir el tiempo excesivo que pasas en tu télefono móvil, incluye las siguientes técnicas persuasivas"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:textSize="15dp"/>

        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="256dp" />
        <TextView
            android:id="@+id/tituloterminos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Condiciones de uso"
            android:layout_margin="30dp"
            android:gravity="center"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/condiciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:text="Esta aplicación accederá a datos del sistema acerca del tiempo de uso de las aplicaciones que tienes instaladas."
            android:textSize="10dp" />

        <Button
           android:id="@+id/acpetarI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="Aceptar"
            />

    </LinearLayout>


</ScrollView>